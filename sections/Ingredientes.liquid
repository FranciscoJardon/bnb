<style>
  .Ingredientes {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 15px;
    padding: 5rem 0;
  }

  .ContenedorCardsIngredientes {
    display: flex;
    flex-direction: column;
    gap: 20px;
    max-width: 1400px;
    width: 100%;

  }
  .TextTitle {
    text-align: center;
  }

  .CardIngredientes img {
    width: 340px;
    height: 100% !important;
  }
  .CardIngredientes {
    position: relative;
    margin: 2rem;
    overflow: hidden;
    width: 340px;
    height: auto;
  }
  .CardIngredientes h3 {
    position: absolute;
    top: 10px;
    left: 25px;
  }
  .CardIngredientes p {
    position: absolute;
    top: 35px;
    left: 25px;
  }



  .SliderProductos {
    width: 100% !important;
    height: 280px;
    position: relative;
  }
  .imgScroll {
    position: absolute;
    left: 0;
    width: 100%;
    display: flex;
    overflow-x: hidden;

  }
  .imgScroll .ContendorCardsSlider {
    display: flex;
    animation: animate 40s linear infinite;
    animation-delay: -40s;
  }
  .imgScroll .ContendorCardsSlider:nth-child(2) {
    animation: animate2 40s linear infinite;
    animation-delay: -20s;
  }
  .imgScroll:hover .ContendorCardsSlider,
  .imgScroll:hover .ContendorCardsSlider:nth-child(2) {
    animation-play-state: paused;
  }
  @keyframes animate {
    0% {
      transform: translateX(100%);
    }
    100% {
      transform: translateX(-100%);
    }
  }
  @keyframes animate2 {
    0% {
      transform: translateX(0%);
    }
    100% {
      transform: translateX(-200%);
    }
  }
  .imgScroll .ContendorCardsSlider .ImgSliderCollecion {

    transition: 0.25s;
  }
  .imgScroll .ContendorCardsSlider .ImgSliderCollecion:hover {
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }
  .imgScroll:hover .ContendorCardsSlider .ImgSliderCollecion {
    opacity: 0.05;
    filter: blur(5px);
  }
  .imgScroll .ContendorCardsSlider .ImgSliderCollecion:hover {
    opacity: 1;
    filter: blur(0px);
  }
</style>

