<section>
  <div class="content">
    <div class="title-main-card">
      <h1 style="padding-bottom: {{ section.settings.padding-bottom }} ; padding-top:{{ section.settings.padding-top }}; color:{{ section.settings.heading-color}}; "> {{ section.settings['heading-title-plans'] }}</h1>
    </div>
    <div class="content-cards">
      {% for block in section.blocks %}
        <div style=" background-color:{{ block.settings.bg-color }}; " class="cards">
          <div class="cards">
            <div class="info-card">
              <h3>{{ block.settings['title-card'] }}</h3>
              <p>{{ block.settings.invest }} </p>
              <p>{{ block.settings['price-card'] }}</p>
              <p>{{ block.settings['card-discount'] }}</p>
              <p>{{ block.settings['price-percent'] }}</p>
              <span>{{ block.settings['card-gain'] }}</span>
              <p>{{ block.settings['gain-card'] }}</p>
              <div class="btn-bnb">
                <a href=" {{ block.settings.link }} ">{{ block.settings.link-text }}</a>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}

      <div>
        
      </div>
    </div>
  </div>
</section>

<style>
  .content {
    text-align: center;
    margin: 20px;
  }
  .content-cards {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 5rem;
    margin: 36px 0px;
  }
  .cards{ 
    border-radius: 30px;
  }

  .info-card {
    padding: 5rem 15rem 2rem 15rem;
  }

  .info-card h3 {
    color: white;
    font-weight: bold;
    font-size: 32px;
    text-transform: uppercase;
  }

  .info-card span {
    color: white;
    font-weight: 300;
  }
  .title-main-card h1 {
      font-weight: bold;
      font-size: calc(var(--font-heading-scale) * 3rem) !important;
  }

  .info-card p {
    color: white;
    font-size: 24px;
    font-weight: 600;
    margin: 0;
    padding: 0px 0px 10px;
  }
  .btn-bnb {
    padding: 12px 0px 12px 0px;
  }
  .btn-bnb a {
    background-color: #fff;
    padding: 10px 15px;
    text-decoration: none;
    color: black;

  }

@media (max-width:500px) {
  .info-card {
    padding: 6rem;
    display: flex;
    justify-content: space-between;
    flex-direction: column;  }
}


</style>

{% schema %}
{
  "name": "Planes",
  "settings": [
    {
      "type": "text",
      "id": "heading-title-plans",
      "label": "Titulo",
      "default": "Contamos con diferentes paquetes para iniciar"
    },
    {
      "type": "color",
      "id": "heading-color",
      "label": "Selecciona un color",
      "default": "#348158"
    },
    {
      "type": "range",
      "id": "padding-top",
      "label": "Relleno superior",
      "max": 48,
      "min": 0,
      "unit": "px",
      "step": 12,
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-bottom",
      "label": "Relleno inferior",
      "max": 48,
      "min": 0,
      "unit": "px",
      "step": 12,
      "default": 0
    }
  ],
  "blocks": [
    {
      "name": "Card",
      "type": "card",
      "settings": [
        {
          "type": "color",
          "id": "bg-color",
          "label": "Selecciona un color",
          "default": "#348158"
        },
        {
          "type": "text",
          "id": "title-card",
          "label": "Plan",
          "default": "Opci√≥n 1"
        },
        {
          "type": "text",
          "id": "invest",
          "label": "Texto",
          "default": "Invierte"
        },
        {
          "type": "text",
          "id": "price-card",
          "label": "Precio",
          "default": "3,500.00"
        },
        {
          "type": "text",
          "id": "card-discount",
          "label": "Texto",
          "default": "Se aplica"
        },
        {
          "type": "text",
          "id": "price-percent",
          "label": "Precio",
          "default": "15%"
        },
        {
          "type": "text",
          "id": "card-gain",
          "label": "Texto",
          "default": "Ganancia"
        },
        {
          "type": "text",
          "id": "gain-card",
          "label": "Precio",
          "default": "$529.50"
        },
        {
          "type": "text",
          "id": "link-text",
          "label": "Selecciona un enlace"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Planes de precios"
    }
  ]
}
{% endschema %}
